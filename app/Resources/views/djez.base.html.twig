<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>
		{% block title %}  {% endblock %}
	</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="{{ asset('Flat-UI-master/css/vendor/bootstrap.min.css') }}" rel="stylesheet">
	<link href="{{ asset('Flat-UI-master/css/flat-ui.min.css') }}" rel="stylesheet">
    <link href="{{ asset('custom/css/generic.css') }}" rel="stylesheet" type="text/css" media="all">
    <!-- include the core styles -->
	<link href="{{ asset('alertify/themes/alertify.core.css') }}" rel="stylesheet" type="text/css" media="all" />
	<!-- include a theme, can be included into the core instead of 2 separate files -->
	<link href="{{ asset('alertify/themes/alertify.default.css') }}" rel="stylesheet" type="text/css" media="all" />
  </head>
  <body>
  	<div id="header">
  		<div id="top_header">
  			<div class="container">

  		<div class="language_div">
  			<a href="{{ path('djez_devise', {'devise': 'EUR'}) }}"><img title="Prix en euro" class="flags" src="{{ asset('custom/images/ue.png') }}"></a>
  			<a href="{{ path('djez_devise', {'devise': 'FCFA'}) }}"><img title="Prix en fcfa" class="flags"  src="{{ asset('custom/images/cedeao.jpg') }}"></a>
  		</div>

      <div id="user_admin">
      	<ul id="user_logged">

      		{% if not is_granted('IS_AUTHENTICATED_FULLY') %}

      		<li class="top_header_connexion_li">
      			<span class="fui-user"></span>
      			<a id="connexion-link" href="{{ path("fos_user_security_login") }}">{% trans %} user.connexion {% endtrans %}</a>
      		</li>

			{% else %}
	    		<li>
	      			<span class="fui-list-bulleted">

	      			<div role="toolbar" class="btn-toolbar btn-toolbar-customization">
	      					<div class="btn-group">
	      						<a id="connected-user" class="btn btn-default btn-xs dropdown-toggle">
	      							{{ app.user.username }}<span class="caret"></span>
	      						</a>
	      						<ul id="connected-user-menu" role="menu" class="dropdown-menu dropdown-menu-customization">
	      							<li><a href="#">{{ 'user.account' | trans }}</a></li>
	      							<li><a href="#">{{ 'user.adds' | trans }}</a></li>
	      							<li><a href="#">{{ 'user.mails' | trans }}<span class="fui-mail"></span></a></li>
	      							<li class="divider"></li>
	      							<li><a href="{{ path("fos_user_security_logout") }}">{{ 'user.disconnect' | trans }}<span class="fui-exit"></span></a> </li>
	      						</ul>
	      					</div>
	      				</div>
	      			</span>
	      		</li>
		    {% endif %}
      	</ul>
      </div>

  <!-- Login form -->

  <div id="inline-login-div" class="inline-login-form">
  	<form id="inline-login-form" class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post" >

  		<input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />

  		<div class="form-group inline-login-form-component">
  			<input type="text" class="form-control inline-login-field component-min-width input-sm" name="_username" value="" id="inline-login"
  			placeholder="Login" >
  			<label class="inline-login-field-icon fui-user" for="login-input"></label>
  		</div>

  		<div class="form-group inline-login-form-component">
  			<input type="password" class="form-control inline-login-field component-min-width input-sm" name="_password" value="" id="inline-password"
  			placeholder="Password" >
  			<label class="inline-login-field-icon fui-lock" for="inline-password"></label>
  		</div>

  		<a class="btn btn-primary btn-lg btn-block inline-login-btn-size" id="submit-login" href="#">
  			{{ 'user.connexion' | trans }}
  		</a>

  		<div class="credential-lost-inline">
  			<a class="identifiant-oublie" href="{{ path("fos_user_resetting_request") }}">
  				{{ 'user_credential.forgotten' | trans }}
  			</a>
  			<a class="creer-compte" href="{{ path("fos_user_registration_register") }}">
  				{{'user_account.creation' | trans}}
			</a>
  		</div>

  	</form>
  </div>
</div>
</div>

<div id="bottom_header">

	<div class="container">
		<div id="menu">
			<ul id="menu_horizontal" class="navigation">
				<li class="navigation_element {% if (selectedTab  == 1) %} selected-menu-element {% endif %}"><a id="accueil_id" href="{{ path('djez_accueil_pagination_homepage') }}">{% trans %} home_page.title {% endtrans %}
</a></li>
				<li class="navigation_element {% if (selectedTab  == 2) %} selected-menu-element {% endif %}"> <a id="vendre" href="{{ path('djez_publier_annonce') }}">{% trans %} navigation_bar.sell {% endtrans %}</a></li>
				<li class="navigation_element {% if (selectedTab  == 3) %} selected-menu-element {% endif %}"> <a onclick="horizontal_menu(this)" id="acheter" href="{{ path('djez_recherche_avancee') }}">{% trans %}navigation_bar.buy{% endtrans %}</a></li>
				<li class="navigation_element {% if (selectedTab  == 4) %} selected-menu-element {% endif %}"> <a onclick="horizontal_menu(this)" id="confie_mission" href="#">{% trans %}  navigation_bar.mission {% endtrans %}
</a> </li>
				<li class="navigation_element {% if (selectedTab  == 5) %} selected-menu-element {% endif %}"> <a onclick="horizontal_menu(this)" id="boutique" href="#">{% trans %} navigation_bar.shops {% endtrans %}
</a> </li>
				<li class="navigation_element {% if (selectedTab  == 6) %} selected-menu-element {% endif %}"> <a onclick="horizontal_menu(this)" id="aide" href="#">{% trans %} navigation_bar.help {% endtrans %}
</a> </li>
			</ul>
		</div>
	</div>
	<!--</div>-->
</div>
</div>

