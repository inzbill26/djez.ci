	<script src="{{ asset('Flat-UI-master/js/vendor/jquery.min.js') }}"></script>
	<script src="{{ asset('alertify/lib/alertify.min.js') }}"></script>
	<script src="{{ asset('Flat-UI-master/js/flat-ui.min.js') }}"></script>
	<script src="{{ asset('Flat-UI-master/js/application.js') }}"></script>

 	{% block customscripts %}

	{% endblock %}

 	<script type="text/javascript">

		$(".top_header_connexion_li").mouseover(function() {
		    	// .position() uses position relative to the offset parent,
		    	var pos = $(this).position();

			    // .outerWidth() takes into account border and padding.
			    var width = $(this).outerWidth();

			    //show the menu directly over the placeholder
			    $("#inline-login-div").css({
			    	position: "absolute",
			    	top: pos.top + 22 + "px",
			    	left: pos.left + "px"
			    }).show("slow");
			});

		$("#inline-login-div").mouseleave(function(){
			$(this).hide("slow");
		});

		$("#connected-user").mouseover(function(){
			$("#connected-user-menu").show("slow");
		});

		$("#connected-user-menu").mouseleave(function(){
			$(this).hide("slow");
		});


		$loginForm = $("#inline-login-form");
		$("#submit-login").on('click',function(){

			login = $("#inline-login").val();
			password = $("inline-password").val();

			if( login == null || $.trim(login) == "" ){
				return false;
			//}else if ( password == null || $.trim(password) == "" ) {
			//	return false;
			}else{
				$loginForm.submit();
			}

		});


	</script>

</body>
</html>
